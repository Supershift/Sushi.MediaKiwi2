{
  "private": true,
  "workspaces": [
    "src/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Supershift/Sushi.MediaKiwi2.UI.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Supershift/Sushi.MediaKiwi2.UI/issues"
  },
  "homepage": "https://github.com/Supershift/Sushi.MediaKiwi2.UI#readme",
  "scripts": {
    "postinstall": "npm run install:mediakiwi.vue && npm run install:mediakiwi.sampleWeb.clientapp",
    "install:mediakiwi.vue": "cd src/Sushi.MediaKiwi.Vue && npm install --ignore-scripts",
    "install:mediakiwi.sampleWeb.clientapp": "cd src/Sushi.MediaKiwi.SampleWeb/ClientApp && npm install --ignore-scripts",
    "install:mediakiwi.sampleWeb.function": "cd src/Sushi.MediaKiwi.SampleWeb/Function && npm install --ignore-scripts",
    "start:api": "cd src/Sushi.MediaKiwi.SampleAPI && dotnet build && dotnet watch run --launch-profile https"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/eslint-config-typescript": "^9.1.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.0.3",
    "stylelint": "^15.9.0",
    "stylelint-config-standard-scss": "^9.0.0",
    "typescript": "~4.5.5",
    "vue-eslint-parser": "^9.1.0"
  }
}
